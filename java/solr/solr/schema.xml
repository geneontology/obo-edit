<?xml version="1.0" encoding="UTF-8" ?>

<schema name="example" version="1.2">

  <types>
    <fieldType name="string"
	       class="solr.StrField"
	       sortMissingLast="true"
	       omitNorms="true"/>
    <fieldType name="text_ws"
	       class="solr.TextField"
	       positionIncrementGap="100">   
      <analyzer>
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
      </analyzer>
    </fieldType>
  </types>

  <fields>
   <!-- Required -->
   <field name="acc"
	  type="string"
	  indexed="true"
	  stored="true"
	  required="true" />
   <field name="name"
	  type="text_ws"
	  indexed="true"
	  stored="true"
	  required="true" />
   <!-- Optional -->
   <field name="term_type"
	  type="string"
	  indexed="true"
	  stored="true"
	  required="true" />
   <field name="term_synonym"
	  type="string"
	  indexed="true"
	  stored="true"
	  required="false" />
   <field name="acc_synonym"
	  type="string"
	  indexed="true"
	  stored="true"
	  required="false" />
   <field name="term_definition"
	  type="text_ws"
	  indexed="true"
	  stored="true"
	  required="false" />
   <field name="term_comment"
	  type="text_ws"
	  indexed="true"
	  stored="true"
	  required="false" />
  </fields>

  <uniqueKey>acc</uniqueKey>

  <defaultSearchField>name</defaultSearchField>

  <solrQueryParser defaultOperator="OR"/>

</schema>
