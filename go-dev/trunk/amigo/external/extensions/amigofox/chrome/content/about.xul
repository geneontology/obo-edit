<?xml version="1.0"
      encoding="UTF-8"?>
<?xml-stylesheet href="chrome://global/skin/"
		 type="text/css"?>
<window class="dialog"
	title="AmiGO Extension - About"
	orient="vertical"
	autostretch="always"
	onload="sizeToContent()"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  
  <groupbox align="center"
	    orient="horizontal">
    <vbox>
      <text value="AmiGO Extension"
	    style="font-weight: bold; font-size: x-large;"/>
      <text value="v. 0.1"/>
      <separator class="thin"/>
      <text value="Created by:"
	    style="font-weight: bold;"/>
      <text value="Berkeley BOP"
	    style="font-weight: bold;"/>
      <separator class="thin"/>
    </vbox>
    <spring flex="1"/>
  </groupbox>
  
  <hbox>
    <spacer flex="1"/>
    <button label="Close"
	    oncommand="window.close();"/>
  </hbox>
  
</window>
